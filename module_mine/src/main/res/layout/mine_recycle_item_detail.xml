<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="73dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mine_layout_recycle_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#15315B"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/mine_layout_recycle_item_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="卷卷鼠标垫"
        tools:textColor="#15315B"
        tools:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mine_layout_recycle_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#15315B"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mine_layout_recycle_item_title"
        tools:text="2021.4.2"
        tools:textColor="#15315B"
        tools:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mine_appcompattextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="#4B66F0"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mine_layout_recycle_item_detail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="-4300"
        tools:textColor="#4B66F0"
        tools:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/mine_layout_recycle_item_title"
        app:layout_constraintStart_toEndOf="@+id/mine_layout_recycle_item_title"
        app:layout_constraintTop_toTopOf="@+id/mine_layout_recycle_item_title"
        app:srcCompat="@drawable/mine_ic_product_state" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mine_layout_recycle_item_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mine_ic_recycle_item_right_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>